{
	"name": "@mirite/eslint-config-mirite",
	"version": "1.3.5",
	"description": "A collection of my favourite eslint rules for TypeScript, React, and Tailwind",
	"keywords": [
		"eslint",
		"typescript",
		"react",
		"tailwindcss"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mirite/eslint-config-mirite.git"
	},
	"license": "MIT",
	"author": {
		"name": "Jesse Conner",
		"email": "me@jesseconner.ca"
	},
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		}
	},
	"types": "./dist/esm/index.d.ts",
	"files": [
		"dist/**/*"
	],
	"scripts": {
		"build": "yarn clean && tsc -p ./configs/tsconfig.json",
		"check": "tsc --noEmit",
		"clean": "del-cli dist",
		"format": "prettier --write --cache .",
		"lint": "eslint --fix --cache"
	},
	"dependencies": {
		"@eslint/js": "^9.39.2",
		"@ianvs/prettier-plugin-sort-imports": "^4.7.0",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsdoc": "^61.5.0",
		"eslint-plugin-perfectionist": "^5.2.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-compiler": "19.1.0-rc.2",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-tailwindcss": "^4.0.0-beta.0",
		"globals": "^17.0.0",
		"prettier-plugin-jsdoc": "^1.8.0",
		"prettier-plugin-packagejson": "^2.5.20",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"typescript-eslint": "^8.51.0"
	},
	"devDependencies": {
		"@types/eslint-plugin-tailwindcss": "^3.17.0",
		"@types/node": "^25.0.3",
		"del-cli": "^7.0.0",
		"eslint": "^9.39.2",
		"prettier": "^3.7.4",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"eslint": "^9",
		"prettier": "^3",
		"tailwindcss": "^4.1.*"
	},
	"packageManager": "yarn@4.12.0"
}
