{
	"name": "@mirite/eslint-config-mirite",
	"version": "1.3.0",
	"description": "A collection of my favourite eslint rules for TypeScript, React, and Tailwind",
	"keywords": [
		"eslint",
		"typescript",
		"react",
		"tailwindcss"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mirite/eslint-config-mirite.git"
	},
	"license": "MIT",
	"author": {
		"name": "Jesse Conner",
		"email": "me@jesseconner.ca"
	},
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		}
	},
	"types": "./dist/esm/index.d.ts",
	"files": [
		"dist/**/*"
	],
	"scripts": {
		"build": "yarn clean && tsc -p ./configs/tsconfig.json",
		"check": "tsc --noEmit",
		"clean": "del-cli dist",
		"format": "prettier --write --cache .",
		"lint": "eslint --fix --cache"
	},
	"dependencies": {
		"@eslint/js": "^9.32.0",
		"@ianvs/prettier-plugin-sort-imports": "^4.6.0",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsdoc": "^52.0.4",
		"eslint-plugin-perfectionist": "^4.15.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-compiler": "19.1.0-rc.2",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-tailwindcss": "^4.0.0-beta.0",
		"globals": "^16.3.0",
		"prettier-plugin-jsdoc": "^1.3.3",
		"prettier-plugin-packagejson": "^2.5.19",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"typescript-eslint": "^8.39.0"
	},
	"devDependencies": {
		"@types/eslint-plugin-tailwindcss": "^3.17.0",
		"@types/node": "^24.2.0",
		"del-cli": "^6.0.0",
		"eslint": "^9.32.0",
		"prettier": "^3.6.2",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.9.2"
	},
	"peerDependencies": {
		"eslint": "^9.30.1",
		"prettier": "^3.6.2",
		"tailwindcss": "^4.1.11"
	},
	"packageManager": "yarn@4.9.2"
}
